<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="widget_members_online" modification_key="knownBots_widget_members_online" description="Change online users phrase to include robots" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[{{ phrase('online_now_x_members_y_guests_z',{
				'total': number($online.counts.total),
				'members': number($online.counts.members),
				'guests': number($online.counts.guests)})
			}}]]></find>
    <replace><![CDATA[{{ phrase('online_now_x_members_y_guests_z',{
				'total': number($online.counts.total),
				'members': number($online.counts.members),
				'guests': number($online.counts.guests)})
			}}<br />
<xf:if is="$xf.options.knownbotsShowBotStats">
	{{ phrase('hampel_knownbots_online_now_x_robots', {'robots': number($online.counts.robots)})}}
</xf:if>	]]></replace>
  </modification>
  <modification type="public" template="widget_online_statistics" modification_key="knownbots_widget_online_statistics" description="Add robots to online statistics" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[			<dl class="pairs pairs--justified">
				<dt>{{ phrase('total_visitors') }}</dt>
				<dd>{$counts.total|number}</dd>
			</dl>]]></find>
    <replace><![CDATA[			<dl class="pairs pairs--justified">
				<dt>{{ phrase('total_visitors') }}</dt>
				<dd>{$counts.total|number}</dd>
			</dl>
			<xf:if is="$xf.options.knownbotsShowBotStats">
				<dl class="pairs pairs--justified">
					<dt>{{ phrase('robots') }}</dt>
					<dd>{$counts.robots|number}</dd>
				</dl>
			</xf:if>]]></replace>
  </modification>
</template_modifications>
